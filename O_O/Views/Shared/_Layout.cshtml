@using O_O.Content.Extensions;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta title="O_O Blog" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title | O_O</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/blog.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/mobile.css")" rel="Stylesheet" type="text/css" media="handheld" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
//        window.onresize = function (event) {
//            document.getElementById("dimensions").innerHTML = "X: " + window.innerWidth + "; Y: " + window.innerHeight;
//        }
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-23884364-1']);
        _gaq.push(['_trackPageview']);

        (function () {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

    </script>
    @RenderSection("head", false)
</head>
<body>
    <div id="page">
    <!--[if lt IE 7]><center> <div style=' clear: both; height: 59px; padding:0 0 0 15px; position: relative;'> <a href="http://windows.microsoft.com/en-US/internet-explorer/products/ie/home?ocid=ie6_countdown_bannercode"><img src="http://www.theie6countdown.com/images/banners/warning_bar_0000_us.jpg" border="0" height="42" width="820" alt="You are using an outdated browser. For a faster, safer browsing experience, upgrade for free today." /></a></div></center> <![endif]-->
        <header>
                    <h1>O_O</h1>
            <h2>Code / Design / Theology</h2>

            <nav>
                <span class="brackets">{</span>
                <ul id="nav">
                    <li>@Html.MenuItem("Home","Index","Home")</li>
                    <li>/</li>
                    <li>@Html.MenuItem("Blog", "Index","Blog")</li>
                    <li>/</li>
                    <li>@Html.MenuItem("Home", "About","About")</li>
                </ul>
                <span class="brackets">}</span>
            </nav>
        </header>
        <div id="main">
            @RenderBody()
            <div style="clear:both"></div>
        </div>
        <footer>
            &copy; Thomas Shields | Site Design Inspired by <a href="http://nerdplusart.com">NerdPlusArt</a> | @Html.Partial("_LogOnPartial")
            @if (Request.IsAuthenticated) { 
            <text>| @Html.ActionLink("New Post","Create","Blog")</text>
            }
        </footer>
    </div>
</body>
</html>
