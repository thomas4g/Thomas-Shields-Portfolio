@using O_O.Content.Extensions;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="description" content="Thomas Shields Web Design - The personal blog of Thomas Shields with code snippets, design wrangling, and theological essays" />
    <meta name="keywords" content="Web Design, Web Developement, Design, Development, OOP, HTML, CSS, JavaScript, HTML5, CSS3, Theology, Essays" />
    <meta name="author" content="Thomas Shields" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title | Thomas Shields Web Design</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <!--[if lt IE 8]>
        <link href="@Url.Content("~/Content/IE.css")" rel="stylesheet" type="text/css"/>
    <![endif]-->

        <script type="text/javascript">
            //        window.onresize = function (event) {
            //            document.getElementById("dimensions").innerHTML = "X: " + window.innerWidth + "; Y: " + window.innerHeight;
            //        }
            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', 'UA-23884364-1']);
            _gaq.push(['_trackPageview']);

            (function () {
                var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
            })();

    </script>

    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    @RenderSection("head", false)
</head>
<body>
    <!--[if lt IE 7]>
        <div style='clear: both; left:20%;height: 59px; padding:0 0 0 15px; position: absolute;top:85px;margin:0 auto;'> <a href="http://windows.microsoft.com/en-US/internet-explorer/products/ie/home?ocid=ie6_countdown_bannercode"><img src="http://storage.ie6countdown.com/assets/100/images/banners/warning_bar_0000_us.jpg" border="0" height="42" width="820" alt="You are using an outdated browser. For a faster, safer browsing experience, upgrade for free today." /></a></div>
