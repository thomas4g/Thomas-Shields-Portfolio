@model O_O.Models.post

@{
    O_O.Models.comment com = new O_O.Models.comment();
    com.post = Model.id;
    ViewBag.Title = Model.title;
}
@section head {
<link rel="Stylesheet" href="../../Content/blog.css" />
<link rel="Stylesheet" href="../../Content/sh_the.min.css" />
<script type="text/javascript" src="../../Scripts/sh_main.min.js"></script>
<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

}


@Html.Partial("Post", Model)
<div id="comments">
@foreach (var item in Model.comments)
{
    
    <blockquote class="comment">
            @item.content
            <footer @if(item.email!=null) { <text>style="background-image:url('http://gravatar.com/avatar/@O_O.Content.MD5HashToString.StringToHashToString(item.email.Trim().ToLower())?s=40&d=mm')"</text> }>
                @if (item.website != null)
                {
                    <a class="comment-author" href="http://@item.website.Replace("https://","").Replace("http://","")">
                            @item.author
                    </a>
                }
                else { 
                    <span class="comment-author">@item.author</span>
                }
                <span class="comment-date">@DateStuff.getTimeSpan(item.date)</span>
            </footer>
    </blockquote>
    }
</div>
<div class="addComment">
@Html.Partial("~/Views/Comments/Create.cshtml", com)
</div>


